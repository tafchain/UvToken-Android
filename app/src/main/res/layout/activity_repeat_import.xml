<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        style="@style/MatchMatch"
        android:orientation="vertical"
        tools:context=".ui.importWallet.ui.RepeatImportActivity">

        <include
            android:id="@+id/iTitle"
            layout="@layout/common_title" />

        <ImageView
            style="@style/WrapWrap"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/icon_cutx" />

        <TextView
            style="@style/MatchWrap"
            android:gravity="center_horizontal"
            android:text="@string/repeat_import_prompt"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_5"/>

        <Button
            android:id="@+id/btnReImport"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@drawable/common_btn_select"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/re_import"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>

    </LinearLayout>
</layout>