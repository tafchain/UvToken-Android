<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_26"
        android:orientation="vertical"
        tools:context=".ui.receiveAndTransfer.ui.TransferDetailActivity">

        <include
            android:id="@+id/iTitle"
            layout="@layout/common_title" />

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivResult"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@mipmap/iocn_xq_cg" />

            <TextView
                android:id="@+id/tvResult"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color_23"
                android:textSize="@dimen/sp_14" />
            <!--            color_14-->
            <!--            android:text="@string/contract_debugging_failed"-->
            <TextView
                android:id="@+id/tvTime"
                style="@style/WrapWrap"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_2"
                android:text=""
                android:textColor="@color/color_10"
                android:textSize="@dimen/sp_12" />

            <RelativeLayout style="@style/MatchWrap">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="@string/amount"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvAmount"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text=""
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/MatchWrap"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlAbsenteeism"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:padding="@dimen/dp_20">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/absenteeism"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tvAbsenteeism"
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <include
                android:id="@+id/iLine1"
                layout="@layout/common_line1" />

            <LinearLayout
                android:id="@+id/llReceiveAddress"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/dp_30"
                    android:text="@string/receive_address1"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />
                <TextView
                    android:id="@+id/tvReceiveAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_6"
                    android:src="@mipmap/icon_fuzhi" />
            </LinearLayout>


            <include layout="@layout/common_line1" />


            <LinearLayout
                android:id="@+id/llPaymentAddress"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/dp_30"
                    android:text="@string/payment_address"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tvPaymentAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_6"
                    android:src="@mipmap/icon_fuzhi" />
            </LinearLayout>


            <include layout="@layout/common_line1" />

            <LinearLayout
                android:id="@+id/llMemo"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/dp_30"
                    android:text="@string/memo"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tvMemo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llTransactionHash"
                style="@style/MatchWrap"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_20">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_marginRight="@dimen/dp_30"
                    android:text="@string/transaction_hash"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/tvTransactionHash"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_6"
                    android:src="@mipmap/icon_fuzhi" />
            </LinearLayout>

            <include layout="@layout/common_line1" />

            <RelativeLayout
                android:id="@+id/rlQueryDetails"
                style="@style/MatchWrap"
                android:background="@color/white"
                android:padding="@dimen/dp_20">

                <TextView
                    style="@style/WrapWrap"
                    android:text="@string/query_details"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/sp_14" />


                <ImageView
                    style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_ckgd" />

            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/llFooter"
            style="@style/MatchWrap"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_14"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_14"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/rv_import_wallet_footer_shape"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvAccelerate"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_44"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:background="@drawable/common_btn_select"
                android:gravity="center"
                android:text="@string/accelerate"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>
</layout>