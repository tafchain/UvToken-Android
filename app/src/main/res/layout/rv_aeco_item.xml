<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/dp_100"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llItem"
        style="@style/MatchMatch"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_14"
        android:background="@drawable/rv_wallet_item_bg_select"
        android:orientation="vertical">

        <LinearLayout
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCoinIcon"
               android:layout_height="@dimen/dp_26"
                android:layout_width="@dimen/dp_26"
                android:src="@mipmap/arther_icon" />

            <TextView
                android:id="@+id/tvWalletName"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dp_6"
                android:text=""
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_2"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvManager"
                style="@style/WrapWrap"
                android:drawableRight="@mipmap/icon_kp_more"
                android:padding="@dimen/dp_6"
                android:text="@string/manager"
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvCoinAddress"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_44"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16"
            />
    </LinearLayout>

</LinearLayout>