<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.createWallet.ui.CreateWalletActivity">

        <include
            android:id="@+id/iTitle"
            layout="@layout/common_title" />

        <!--    根据宽高比例来显示图片-->
        <ImageView
            android:id="@+id/ivWalletBg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_38"
            android:src="@mipmap/pic_cjqb" />

        <TextView
            style="@style/WrapWrap"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="@string/already_create_wallet"
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvPrompt"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/prompt"
            android:textColor="@color/color_9"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/tvPromptContent"
            style="@style/MatchWrap"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_38"
            android:text="@string/prompt_content"
            android:textColor="@color/color_9"
            android:textSize="@dimen/sp_14" />


        <!--        <LinearLayout-->
        <!--            style="@style/MatchWrap"-->
        <!--            android:layout_margin="@dimen/dp_20"-->
        <!--            android:background="@drawable/common_prompt_bg_shape"-->
        <!--            android:orientation="vertical"-->
        <!--            android:padding="@dimen/dp_10">-->

        <!--        </LinearLayout>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnBackupImmediately"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@drawable/common_btn_select"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/backup_immediately"
            android:textAllCaps="false"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/btnBackupLater"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@null"
            android:enabled="true"
            android:layout_marginBottom="@dimen/dp_30"
            android:gravity="center"
            android:text="@string/backup_later"
            android:textAllCaps="false"
            android:textColor="@color/color_12"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</layout>