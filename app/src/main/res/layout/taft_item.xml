<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlCoin"
    style="@style/MatchWrap"
    android:layout_marginTop="@dimen/dp_30"
    android:gravity="center_vertical">

    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/layout_swipe_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/layout_content"
        app:rightMenuView="@+id/tv_right">


        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivCoinIcon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@mipmap/icon_taf" />

            <TextView
                android:id="@+id/tvCoinType"
                style="@style/WrapWrap"
                android:layout_marginStart="8dp"
                android:text="TAF"
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_16" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/login"
            android:textColor="@color/white"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:gravity="center"
            android:background="@color/color_14"/>


    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>



