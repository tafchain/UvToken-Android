<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch"
    android:background="@drawable/common_prompt_dialog_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/WrapWrap"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/creating_a_wallet_for_you"
        android:textColor="#ff1d223b"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        style="@style/MatchWrap"
        android:paddingBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rlBtc"
            style="@style/WrapWrap">

            <ImageView
                android:id="@+id/ivBtc"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:alpha="0.3"
                android:src="@mipmap/icon_btc_60" />

            <ImageView
                android:id="@+id/ivLoadGif1"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:layout_centerInParent="true"
                android:src="@drawable/load" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivArrow1"
            style="@style/WrapWrap"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_2"
            android:src="@mipmap/icon_gd" />

        <RelativeLayout
            android:id="@+id/rlETH"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2">

            <ImageView
                android:id="@+id/ivETH"
               android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:alpha="0.3"
                android:src="@mipmap/icon_eth" />
            <!--            android:alpha="0.3"-->
            <ImageView
                android:id="@+id/ivLoadGif2"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:layout_centerInParent="true"
                android:src="@drawable/load"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivArrow2"
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_2"
            android:src="@mipmap/icon_gd" />

        <RelativeLayout
            android:id="@+id/rlTRX"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_marginRight="@dimen/dp_2">

            <ImageView
                android:id="@+id/ivTRX"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_centerInParent="true"
                android:alpha="0.3"
                android:src="@mipmap/icon_eth" />
            <!--            android:alpha="0.3"-->
            <ImageView
                android:id="@+id/ivLoadGif3"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:layout_centerInParent="true"
                android:src="@drawable/load"
                android:visibility="invisible" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivArrow3"
            style="@style/WrapWrap"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dp_2"
            android:visibility="gone"
            android:src="@mipmap/icon_gd" />

        <RelativeLayout
            android:id="@+id/rlAECO"
            style="@style/WrapWrap"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivAECO"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:alpha="0.3"
                android:layout_centerInParent="true"
                android:src="@mipmap/arther_icon" />
            <!--            android:alpha="0.3"-->
            <ImageView
                android:id="@+id/ivLoadGif4"
                android:layout_width="@dimen/dp_62"
                android:layout_height="@dimen/dp_62"
                android:layout_centerInParent="true"
                android:src="@drawable/load"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>