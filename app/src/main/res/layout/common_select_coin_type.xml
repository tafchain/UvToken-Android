<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_import_wallet">

    <RelativeLayout
        android:id="@+id/rlBTC"
        style="@style/MatchWrap"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/ivBTCIcon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/icon_btc_40" />

        <TextView
            android:id="@+id/tvBTCShorthandName"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivBTCIcon"
            android:text="BTC"
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvBTCName"
            style="@style/WrapWrap"
            android:layout_below="@+id/tvBTCShorthandName"
            android:layout_marginLeft="@dimen/dp_6"

            android:layout_toRightOf="@+id/ivBTCIcon"
            android:text="Bitcoin"
            android:textColor="@color/color_9"
            android:textSize="@dimen/sp_12" />


        <ImageView
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/icon_ckgd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlETH"
        style="@style/MatchWrap"
        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">

        <ImageView
            android:id="@+id/ivETHIcon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/icon_eth" />

        <TextView
            android:id="@+id/tvETHShorthandName"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivETHIcon"
            android:text="ETH"
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvETHName"
            style="@style/WrapWrap"
            android:layout_below="@+id/tvETHShorthandName"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivETHIcon"
            android:text="Ethereum"
            android:textColor="@color/color_9"
            android:textSize="@dimen/sp_12" />


        <ImageView
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/icon_ckgd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTRX"
        style="@style/MatchWrap"

        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">
        <!--        android:visibility="gone"-->
        <ImageView
            android:id="@+id/ivTRX"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/ic_trx" />

        <TextView
            android:id="@+id/tvTRX"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivTRX"
            android:text="TRX"
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvTRXName"
            style="@style/WrapWrap"
            android:layout_below="@+id/tvTRX"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivTRX"
            android:text="TRON"
            android:textColor="@color/color_9"
            android:textSize="@dimen/sp_12" />


        <ImageView
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/icon_ckgd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAECO"
        style="@style/MatchWrap"

        android:layout_marginBottom="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20">
        <!--        android:visibility="gone"-->
        <ImageView
            android:id="@+id/ivAECOIcon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/arther_icon" />

        <TextView
            android:id="@+id/tvAECOShorthandName"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivAECOIcon"
            android:text="AECO"
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tvAECOName"
            style="@style/WrapWrap"
            android:layout_below="@+id/tvAECOShorthandName"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@+id/ivAECOIcon"
            android:text="Arthur-ex"
            android:textColor="@color/color_9"
            android:textSize="@dimen/sp_12" />


        <ImageView
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@mipmap/icon_ckgd" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</merge>