<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        style="@style/MatchMatch"
        android:orientation="vertical"
        tools:context=".ui.scan.ui.ScanResultActivity">

        <RelativeLayout style="@style/MatchWrap">

            <include
                android:id="@+id/iTitle"
                layout="@layout/common_title" />

            <!--                TODO-->
            <TextView
                android:id="@+id/tvCopySuccess"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80"
                android:background="@color/color_23"
                android:gravity="center"
                android:text="@string/copy_success"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_margin="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_186"
            android:background="@drawable/confirm_mnemonic_bg_shape">
            <TextView
                android:id="@+id/tvPrivateKey"
                style="@style/MatchWrap"
                android:text=""
                android:textColor="@color/color_5"
                android:layout_margin="@dimen/dp_20"
                android:textSize="@dimen/sp_14"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btnCopy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_60"
            android:background="@drawable/common_btn_select"
            android:enabled="true"
            android:gravity="center"
            android:text="@string/copy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"/>

    </LinearLayout>
</layout>