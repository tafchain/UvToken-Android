<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/unaswap_sign_bg"
        android:orientation="vertical"
        tools:context=".ui.transaction.ui.UnaswapSignActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_88"
            android:background="@drawable/unaswap_sign_up_dialog"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/WrapWrap"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/signature"
                    android:textColor="@color/color_5"
                    android:textSize="@dimen/sp_16" />
                <ImageView
                    android:id="@+id/ivClose"
                   style="@style/WrapWrap"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_tc_close"
                    android:paddingTop="@dimen/dp_30"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivIcoin"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/icon_uni"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_6"/>
            <TextView
                android:id="@+id/tvName"
               style="@style/WrapWrap"
                android:text="Uniswap"
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:id="@+id/tvUrl"
                style="@style/WrapWrap"
                android:text="www.dappwebsite.com"
                android:textColor="@color/color_9"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="center_horizontal"
                />
            <TextView

                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_14"
                android:text="@string/address"
                />

            <TextView
                android:id="@+id/tvAddress"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:text="CCVASASFDSFDSFGDSGFSDGSDGSDGSDGSDGSDGSDGSDGSDGS==jihowiehodewhihi88JJJFJJEK0DJPEJFJOIWJEIO"
                android:textColor="@color/color_9"
                android:textSize="@dimen/sp_14"
                />

            <TextView
                style="@style/WrapWrap"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:textColor="@color/color_5"
                android:textSize="@dimen/sp_14"
                android:text="@string/news_info"
                />

            <TextView
                android:id="@+id/tvNews"
                style="@style/WrapWrap"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8"
                android:text="CCVASASFDSFDSFGDSGFSDGSDGSDGSDGSDGSDGSDGSDGGS==jihowiehodewhihi88JJJFJJEK0DJPEJFJOIWJEIO"
                android:textColor="@color/color_9"
                android:textSize="@dimen/sp_14"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnSign"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:text="@string/signature"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_18"
                android:background="@drawable/common_btn_select"/>


        </LinearLayout>
    </LinearLayout>
</layout>