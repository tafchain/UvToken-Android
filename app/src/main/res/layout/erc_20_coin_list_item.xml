<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_10">

    <ImageView
        android:id="@+id/ivCoinIcon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/icon_usdt_40" />
    <ImageView
        android:id="@+id/ivTag"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_24"
        />

    <LinearLayout
        android:id="@+id/ll"
        style="@style/WrapWrap"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_toRightOf="@+id/ivCoinIcon"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCoinName"
            style="@style/WrapWrap"
            android:text="USDT"
            android:textColor="@color/color_5"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:id="@+id/ivLogo"
            style="@style/WrapWrap"
            android:layout_marginLeft="@dimen/dp_6"
            android:visibility="invisible"
            android:src="@mipmap/icon_erc20" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvLinks"
        style="@style/WrapWrap"
        android:layout_below="@+id/ll"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toRightOf="@+id/ivCoinIcon"
        android:layout_toLeftOf="@+id/ivAdd"
        android:text="0x5D11326...af4adc023"
        android:singleLine="true"
        android:textColor="@color/color_10"
        android:textSize="@dimen/sp_12" />


    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_tianjia" />
</RelativeLayout>