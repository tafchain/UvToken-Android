<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dp_1" android:color="@color/color_12" />
            <gradient android:angle="360" android:endColor="@color/color_13" android:startColor="@color/color_12" />
            <corners android:radius="@dimen/dp_6" />

        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dp_1" android:color="@color/color_22" />
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/dp_6" />
        </shape>
    </item>

</selector>