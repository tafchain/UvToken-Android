<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
<!--            <solid android:color="@color/color_13"/>-->

            <gradient android:endColor="@color/color_12_3" android:startColor="@color/color_13_3" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
<!--            <solid android:color="@color/color_13"/>-->
            <gradient android:endColor="@color/color_12_3" android:startColor="@color/color_13_3" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient android:endColor="@color/color_12" android:startColor="@color/color_13" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>


    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/color_12"
                android:startColor="@color/color_13" />
            <corners android:radius="@dimen/dp_5" />
        </shape>
    </item>

</selector>